{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "CommonJS",
    "noImplicitAny": true,
    "lib": ["ES2017", "ES7", "ES6", "DOM"],
    "outDir": "./dist",
    "target": "ES5",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@mmsi/*": ["./src/*"],
      "@mmsi": ["./src"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}