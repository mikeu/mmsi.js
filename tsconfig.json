{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "module": "AMD",
    "noImplicitAny": true,
    "lib": ["ES2017", "ES7", "ES6", "DOM"],
    "outFile": "./dist/mmsi.js",
    "target": "ES5",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@mmsi/*": ["./src/*"],
      "@mmsi": ["./src"]
    }
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": ["node_modules"]
}