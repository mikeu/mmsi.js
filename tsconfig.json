{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "module": "es6",
    "noImplicitAny": true,
    "lib": ["es2017", "es7", "es6", "DOM"],
    "target": "es5",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@mmsi/*": ["./src/*"],
      "@mmsi": ["./src"]
    },
    "esModuleInterop": true
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": ["node_modules"]
}